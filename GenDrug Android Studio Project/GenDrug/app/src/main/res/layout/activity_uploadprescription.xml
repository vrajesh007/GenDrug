<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadprescription"
    android:orientation="vertical"
    android:background="@drawable/lightmedicaltheme">
    <ImageView
        android:id="@+id/ivmedimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <EditText
        android:layout_marginTop="35dp"
        android:id="@+id/etenterpres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Prescription"/>


    <Button
        android:id="@+id/buploadpres"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Upload Prescription "
        android:background="@drawable/ghost_button"/>
    <ImageView
        android:id="@+id/ProfilePreview"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/roundlogo"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etenteremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"/>
    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/buploadsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:textColor="#ffffff"/>

</LinearLayout>